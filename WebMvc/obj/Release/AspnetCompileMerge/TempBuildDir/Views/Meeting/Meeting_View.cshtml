@{
    Page.CheckApp = false;
    ViewBag.Title = "Meeting_View";
}
@model Data.Model.Meeting
<link type="text/css" href="../../manage/Style/InterFace.Css" rel="stylesheet" rev="stylesheet" media="all" />
<link type="text/css" href="../../manage/style.css" rel="stylesheet" rev="stylesheet" media="all" />
<script src="../../js/DatePicker/WdatePicker.js" type="text/javascript"></script>
<script type="text/javascript" src="../../js/validator.js"></script>
<link type="text/css" href="../../manage/Style/InterFace.Css" rel="stylesheet" rev="stylesheet" media="all" />
<link type="text/css" href="../../manage/style.css" rel="stylesheet" rev="stylesheet" media="all" />
<script type="text/javascript" src="../../js/jquery.js"></script>
<script type="text/javascript" src="../../manage/include/common.js"></script>

<script type="text/javascript">
    var win = new RoadUI.Window();
    var validate = new RoadUI.Validate();

    function ShowIframe() {

        var pop = new Popup({ contentType: 1, scrollType: 'no', isReloadOnClose: true, width: 568, height: 495 });

        pop.setContent("contentUrl", "../../Controls/SelectMember?eid=namelist_dep&isunit=1&isdept=1&isstation=1&isuser=1&ismore=&isall=&isgroup=&rootid=&values=" + document.getElementById("namelist_dep").value + "&iframeid=dialogCase&openerid=tab_45b8d5063d2d46fb8fd43f6208793ae4");

        pop.setContent("title", "发布资讯 - 部门选择");
        pop.build();
        pop.show();
    }
</script>


<body>
    <form action="" method="post">
        @Html.AntiForgeryToken()
        <div id="interface_inside">
            <div id="interface_quick">
                <div class="interface_quick_left">您现在的操作 >> 我的工具 >> 添加会议</div>
                <div class="interface_quick_right">
                    <a href="javascript:void(0)" onclick="javascript:window.location.replace(window.location.href);"><img style="vertical-align:middle;" src="../../manage/images/reload.png" /><strong>刷新</strong></a>
                    &nbsp; &nbsp;
                    <a href="javascript:history.back();"><img style="vertical-align:middle;" src="../../manage/images/ico_up1.gif" /><strong>后退</strong></a>
                </div>
                <div class="clearboth"></div>
            </div>
            <div id="interface_main">
                <div id="tabs_config" class="tabsbox">

                    <div class="clearboth"></div>


                    <!-- 模块 -->
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            <td>

                                <div id="config_basic1" class="tabs_wrapper">
                                    <div class="tabs_main" align="left">
                                        <div id="Div1">

                                            <table class="table subsubmenu">
                                                <thead>
                                                    <tr>
                                                        <td>
                                                            
                                                        </td>
                                                        <td style="text-align:right"></td>
                                                    </tr>
                                                </thead>
                                            </table>
                                            <br />

                                            <div id="PanelConfig">

                                                <table class="table1">
                                                   

                                                    <tr>
                                                        <th style="width:145px; font-weight:bold;  color:#ff0000;">&nbsp;* 会议主题：<a href="#" class="help">[?]</a></th>
                                                        <td>
                                                            <span class="note">请输入 会议主题。</span>
                                                            <input name="MainTopics" type="text" value="@Model.MainTopics" id="MainTopics" style="width:550px;" />
                                                        </td>
                                                    </tr>

                                                    <tr>
                                                        <th style="width:145px; font-weight:bold;">&nbsp; 时间和地点：</th>
                                                        <td>
                                                            <span class="note">请输入 会议的时间和地点.</span>&nbsp;&nbsp;
                                                            会议时间：<input name="CTime" type="text" value="@Model.AddTime" id="CTime"  />
                                                            会议地点：<input name="Address" type="text" value="@Model.Address" id="Address" />
                                                        </td>
                                                    </tr>

                                                    <tr>
                                                        <th style="width:145px; font-weight:bold;">&nbsp; 附件：<a href="#" class="help">[?]</a></th>
                                                        <td>
                                                            
                                                            @{
                                                                if (!string.IsNullOrEmpty(Model.Bodys))
                                                                {
                                                                    if (Model.Bodys.Split('|').Length > 0)
                                                                    {
                                                                        string[] arrfilepath = Model.Bodys.Split('|');
                                                                        for (int i = 0; i < arrfilepath.Length; i++)
                                                                        {
                                                                            <a href="@arrfilepath[i]" target="_blank" class="blue">@arrfilepath[i].Substring(@arrfilepath[i].LastIndexOf('/') + 1)</a><br>
                                                                        }

                                                                    }
                                                                    else
                                                                    {
                                                                        <a href="@Model.Bodys" target="_blank" class="blue">@Model.Bodys.Substring(@Model.Bodys.LastIndexOf('/') + 1)</a>
                                                                    }
                                                                }

                                                            }

                                                        </td>
                                                    </tr>

                                                </table>

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </table>
                    <!-- 模块 -->

                </div>
            </div>
        </div>
    </form>
</body>
</html>


